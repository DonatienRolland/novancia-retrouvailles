<div class="mise-en-page-connexion">

  <%= render 'shared/redbanner-flex' %>

  <div class="formulaire-connexion">
    <div class="pagetitle connexion">
      <h1 class="titre-page">Connecte-toi</h1>
      <div class="redbox redbox-background"></div>
      <div class="orangebox orangebox-background"></div>
    </div>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email, required: false, autofocus: true, placeholder:"Adresse mail", label: false %>
        <%= f.input :password, required: false, placeholder:"Mot de passe", label: false %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>
      <div class="new-user-connection-btn">
        <div class="links-to-connect">
          <%= render "devise/shared/links" %>
        </div>
        <div class="form-actions">
          <%= f.button :submit, "Je me connecte", class: "home-link btn connectwidth" %>
        </div>
      </div>
    <% end %>
  </div>

  <div class="footer-connexion">
    <img src="/assets/text-desc-xs.png" alt="Découvrez sur l'écran les photos pendant votre passage à Novancia et partagez vos souvenirs de cette soirée" class="text-desc-xs-connexion">
    <img src="/assets/Avem_illustration.png" alt="logo Avem" class="rotation-90-gauche placement-illustration-logo">
  </div>
</div>
